---
import HERO_IMAGE from "../assets/images/JMB/workshop_sketch.png";
import { BRAND_NAME } from '../consts';
import { Icon } from 'astro-icon/components';

---
<section class="hero-section d-flex align-items-center text-white py-5" 
  data-aos="zoom-in-down"
  style={`background-image: url('${HERO_IMAGE.src}')`}
>
  <div class="overlay"></div>

  <div class="container position-relative text-center">
    <!--[ Logo ]-->
    <img class="d-block mx-auto mb-4" src="/motoWorks.png" alt={BRAND_NAME+" logo"} width="130" height="130">
    <!--[ Copy Content ]-->
    <h1 class="display-4 fw-bold text-uppercase hero-title"
    >Reliable Motorcycle & Generator Services</h1>
    <!-- Subheadline -->
    <div class="d-flex gap-3 justify-content-center p-3">
      <h2 class="fw-light mb-4 w-75 px-3">
        Your go-to workshop for motorbike and generator maintenance in & around Johannesburg.<br>
      </h2>
    </div>
    <p class="lead mb-1 hero-subtitle"
    >Fast. Honest. Professional repairs you can trust.</p>
    <p class="mb-4"><small>
      Expert service. Transparent pricing. Fast turnaround for every rider and every machine.</small>
    </p>

    <!--[ Body text ]-->
    <p class="lead mb-4">
      MotoWorks is your online link to a real mechanic who understands your needs. 
      From scooters to superbikes, generators to power tools, we fix it with care. 
      Book your job and get updates right here-hassle-free.
    </p>
    <center><hr class="my-4 w-50"></center>
    <!--[ CTAs ]-->
    <div class="d-flex gap-3 justify-content-center py-3">
      <a href="/booking" class="btn btn-primary fw-bold px-4">
        <Icon name="mdi:calendar" height="20" width="20" class="me-2" />
        Book Service
      </a>

      <a href="tel:+27837654679" class="btn btn-outline-light fw-bold px-4">
        <Icon name="mdi:phone" height="20" width="20" class="me-2" />
        Call Now
      </a>

      <a href="https://wa.me/27837654679" class="btn btn-success fw-bold px-4">
        <Icon name="mdi:whatsapp" height="20" width="20" class="me-2" />
        WhatsApp Now
      </a>
    </div>
  </div>
</section>
<!-- Style -->
<style>
  .hero-section {
    position: relative;
    min-height: 70vh;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.55); /* dark overlay */
    backdrop-filter: brightness(0.6);
  }

  .hero-title {
    letter-spacing: 1px;
  }

  .hero-subtitle {
    opacity: 0.9;
  }

  @media (min-width: 768px) {
    .hero-section {
      min-height: 85vh;
    }
  }
</style>
