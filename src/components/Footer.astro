---
import { Image } from "astro:assets";
import SvgSymbols from "./SvgSymbols.astro";
import faviconImage from "../assets/myfavicon.png";
import { BRAND_NAME } from "../consts";
const today = new Date();
---
<SvgSymbols />
<footer class="container px-sm-4 pt-5 mt-4 mb-2">
  <!-- Quick links -->
  <ul class="border-top nav justify-content-center pb-1">
    <!-- Home -->
    <li class="nav-item">
      <a href="/" class="nav-link px-2 text-body-secondary">Home</a>
    </li>
    <!-- About -->
    <li class="nav-item">
      <a href="/about" class="nav-link px-2 text-body-secondary">About Us</a>
    </li>
    <!-- Contact -->
    <li class="nav-item">
      <a class="nav-link px-2 text-body-secondary" href="/contact">Contact</a>
    </li>
    <!-- Portfolio -->
    <li class="nav-item">
      <a class="nav-link px-2 text-body-secondary" href="/portfolio">Portfolio</a>
    </li>
  </ul>
  <!-- Branding x Socials -->
  <div class="border-bottom border-top d-flex flex-wrap justify-content-between align-items-center py-3 mb-3">
    <!-- Brand -->
    <div class="col-md-6 d-flex align-items-center">
      <a href="/"
        class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1" 
        aria-label="Bootstrap"
      >
        <Image src={faviconImage} fetchpriority="high" loading={"eager"}
          aria-hidden="true" alt="favicon"
          class="bi me-1 rounded-circle" style="height: 30px;width:30px;"
        />
      </a>
      <span class="mb-3 mb-md-0 text-body-secondary text-center"
      >&copy; {today.getFullYear()} {BRAND_NAME}, Inc. All rights reserved.</span>
    </div>

    <!-- Socials -->
    <ul class="nav col-12 col-md-6 justify-content-end list-unstyled d-flex"
    >
      <!-- Discord -->
      <li class="ms-3">
        <a class="text-body-secondary" 
          aria-label="Discord"
          href="https://www.discord.com/users/1353107180592824350" 
          target="_blank" 
        >
          <svg class="bi" width="30" height="30"
					><use xlink:href="#discord"></use></svg>
        </a>
      </li>
      <!-- Github -->
      <li class="ms-3">
        <a class="text-body-secondary"
          href="https://www.github.com/Khanye-D-Johan"
          target="_blank"
          aria-label="Github">
          <svg class="bi" width="30" height="30"
					><use xlink:href="#alt-github"></use></svg>
        </a>
      </li>
      <!-- LinkedIn -->
      <li class="ms-3">
        <a class="text-body-secondary"
          aria-label="LinkedIn"
          href="https://www.linkedIn.com/in/johan-khanye"
          target="_blank" 
        >
          <svg class="bi" width="30" height="30"
          ><use xlink:href="#linkedin"></use></svg>
        </a>
      </li>
      <!-- X -->
      <li class="ms-3">
        <a class="text-body-secondary"
          aria-label="X/(formerly: Twitter)"
          href="https://www.x.com/johan_prodigal"
          target="_blank"
        >
          <svg class="bi" width="30" height="30"
          ><use xlink:href="#x-twitter"></use></svg>
        </a>
      </li>
      <!-- Instagram -->
      <li class="ms-3">
        <a aria-label="Instagram"
          class="text-body-secondary"
          href="https://www.instagram.com/khanye_johan"
        >
          <svg class="bi" width="30" height="30" aria-hidden="true"
					><use xlink:href="#instagram"></use></svg>
        </a>
      </li>
      <!-- Facebook -->
      <li class="ms-3">
        <a class="text-body-secondary" href="www.Facebook.com" aria-label="Facebook">
          <svg class="bi" width="30" height="30"
					><use xlink:href="#facebook"></use></svg>
        </a>
      </li>
    </ul>
  </div>
</footer>