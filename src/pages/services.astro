        src="/motoWorks.png" alt={BRAND_NAME+" logo"} width="130" height="130">
      <!--[ Headline ]-->
      <h1 class="display-5 fw-bold text-body-emphasis"
      >Our Offerings: Comprehensive Motorcycle Care</h1>
      <!--[ Subheadline ]-->
      <div class="px-5">
        <h2 class="fw-light mb-1"
        ><em>From basic maintenance to complex rebuilds - our workshop handles it all.</em></h2>
      </div>
    </div>
  </section>
  <center><hr class="w-75"></center>
  <!--[ 2. Services ]-->
  <section id="quick-services" class="py-4">
    <!--[ Section Header ]-->
    <div class="text-center mb-5">
      <h2 class="fw-bold display-6">What We Do Best!</h2>
      <p class="text-secondary lead">Professional development & data solutions for growing businesses.</p>
    </div>
    
    <div class="row g-2">
      <!-- Services -->
      <div class="col-md-8">
        <!--[ Services Grid ]-->
        <div class="row g-2 row-cols-1 row-cols-sm-2 row-cols-lg-3" data-aos="fade-up" data-aos-delay="500">
          {services.map((sv) => (
            <ServiceCard
              icon={sv.icon}
              title={sv.title}
              description={sv.description}
