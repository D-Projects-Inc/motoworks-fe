---
import "../styles/global.css";
import Layout from '../layouts/Layout.astro';
import AOSInit from "../components/InitAOS";
import ContactUsForm from "../components/forms/ContactFormCard.astro";
---

<Layout>
  <AOSInit client:idle />
  <!--[ 1. Hero Section ]-->
  <section class="text-center mb-3 mt-5 py-3" data-aos="zoom-in">
	  <div class="py-3 container-md">
      <h1 class="display-2 fw-light text-body-emphasis"
      >Contact Us</h1>
      <h3>Let's Get You Back on the Road</h3>
      <p class="lead">
        Fill in the form or send us a quick WhatsApp - we'll respond same day.
      </p>
    </div>
  </section>
  <center><hr class="w-75"></center>
  <!--[ 2. Contact Info ]-->
  <section class="container py-5">
    <div class="row mb-3">
      <div class="col-md-8 mb-4 h-100">
        <h3>Our Location</h3>
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.835434509374!2d144.9556513153162!3d-37.81732797975171!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!2s0x6ad642af0f11fd81%3A0xf577d3c9b1e5b1!2sFederation%20Square!5e0!3m2!1sen!2sau!4v1614031234567!5m2!1sen!2sau"
          width="100%"
          height="300"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>
      <!--[ Contact Details & Operation Hours ]-->
      <div class="col-md-4" style="position: sticky; top: 20px;">
        <!--[  Contact Details | #TODO: Use `workshop`s' contact data. ]-->
        <div class="card p-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Other Ways to Reach Us</h5>
            <!--[ Phone ]-->
            <p class="card-text">
              <strong>Phone:</strong> 
              <a href="tel:+1234567890" target="_blank">+1 (234) 567-890</a>
            </p>
            <!--[ Email ]-->
            <p class="card-text">
              <strong>Email:</strong> 
              <a href="mailto:khanyejohan@gmail.com" target="_blank">khanyejohan@gmail.com</a>
            </p>
            <!--[ WhatsApp ]-->
            <p class="card-text">
              <strong>WhatsApp:</strong> 
              <a href="https://wa.me/27837654679" target="_blank">Chat with us on WhatsApp</a>
            </p>
          </div>
        </div>
        <!--[ Operation Hours ]-->
        <div class="card p-3">
          <div class="card-body">
            <h3 class="card-title">Opening Hours</h3>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Monday - Friday:</strong> 8:00 AM - 6:00 PM
            </li>
            <li class="list-group-item">
              <strong>Saturday:</strong> 9:00 AM - 4:00 PM
            </li>
            <li class="list-group-item">
              <strong>Sunday:</strong> Closed
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  <center><hr class="w-75"></center>
  <!--[ 3. Contact Form ]-->
  <section class="container-md py-5 ">
    <div class="d-flex justify-content-center">
      <div class="" data-aos="fade-up">
        <ContactUsForm />
        <div id="formMessage" class="mt-4 text-center text-lg font-semibold hidden"></div>
      </div>
    </div>
  </section>
  <center><hr class="w-75"></center>
</Layout>

<script type="module" src="/src/scripts/contact.js"></script>